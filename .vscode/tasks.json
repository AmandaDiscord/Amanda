{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "eslint",
			"type": "shell",
			"command": "${workspaceFolder}/node_modules/.bin/eslint .",
			"group": "build",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"type": "npm",
			"script": "start",
			"problemMatcher": []
		},
		{
			"type": "npm",
			"script": "website",
			"problemMatcher": []
		}
	]
}
