{
	"compilerOptions": {
		"allowSyntheticDefaultImports": false,
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": false,
		"declaration": false,
		"emitDecoratorMetadata": false,
		"experimentalDecorators": false,
		"incremental": true,
		"lib": ["esnext", "dom"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedLocals": false,
		"outDir": "./dist",
		"pretty": true,
		"removeComments": true,
		"resolveJsonModule": false,
		"sourceMap": true,
		"skipLibCheck": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictNullChecks": true,
		"target": "ES2020",
		"types": ["node"],
		"rootDir": "source"
	},
	"include": ["source/**/*.ts"],
	"exclude": ["node_modules", "dist/**/*", "config.js", "config.sample.js"]
}
